{
    "ts-node": {
        "transpileOnly": true,
        "require": [
            "tsconfig-paths/register"
        ],
        "files": true,
        "esm": true,
    },
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "ESNext",
        "sourceMap": true,
        "outDir": "./build",
        "baseUrl": "./",
        "rootDir": "./src",
        "incremental": true,
        "skipLibCheck": true,
        "strict": true,
        "strictNullChecks": false,
        "noImplicitAny": true,
        "strictBindCallApply": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "esModuleInterop": true,
        "paths": {
            "@/*": [
                "src/*"
            ],
        },
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": [
            "node"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "build"
    ]
}